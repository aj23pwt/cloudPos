		if(list3 !=null && list3.size()>0){
			posAccount= list3.get(0);
		}		
		try {
				//联单操作
				oldMaster.setPcrec(oldAccnt);
				System.out.println(oldMaster.getId());
				posMasterDao.update(oldMaster);
				newMaster.setPcrec(oldAccnt);
